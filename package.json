{
  "name": "homebridge-mylink",
  "version": "1.2.1",
  "description": "Somfy myLink plugin for Homebridge.",
  "license": "MIT",
  "keywords": [
    "homebridge-plugin"
  ],
  "homepage": "https://github.com/yungsters/homebridge-mylink",
  "bugs": {
    "url": "http://github.com/yungsters/homebridge-mylink/issues"
  },
  "author": "Timothy Yung <yungsters@gmail.com>",
  "files": [
    "src/",
    "LICENSE"
  ],
  "main": "src/index.js",
  "repository": "yungsters/homebridge-mylink",
  "scripts": {},
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "engines": {
    "homebridge": ">=0.4.38",
    "node": ">=8.1.3"
  },
  "devDependencies": {
    "eslint": "^6.4.0",
    "husky": "^3.0.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1"
  },
  "dependencies": {
    "somfy-synergy": "^1.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
